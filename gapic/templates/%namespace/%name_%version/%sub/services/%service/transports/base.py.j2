            [{{ method.input.ident }}],
            typing.Union[
                {{ method.output.ident }},
                typing.Awaitable[{{ method.output.ident }}]
            ]]:
        raise NotImplementedError()
    {%- endfor %}


__all__ = (
    '{{ service.name }}Transport',
)
